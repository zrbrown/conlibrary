<#macro format duration><#if duration.toDaysPart() gt 0>${duration.toDaysPart()} day<#if duration.toDaysPart() != 1>s</#if><#if duration.toHoursPart() != 0 || duration.toMinutesPart() != 0> </#if></#if><#if duration.toHoursPart() gt 0>${duration.toHoursPart()} hour<#if duration.toHoursPart() != 1>s</#if><#if duration.toMinutesPart() != 0> </#if></#if><#if duration.toMinutesPart() gt 0 || duration.toMinutes() lt 60>${duration.toMinutesPart()} minute<#if duration.toMinutesPart() != 1>s</#if></#if></#macro>